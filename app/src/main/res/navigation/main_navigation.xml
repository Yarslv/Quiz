<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.yprodan.quiz.ui.QuizFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_quiz">
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment">
            <argument
                android:name="score"
                app:argType="integer"
                android:defaultValue="0" />
            <argument
                android:name="total"
                app:argType="integer"
                android:defaultValue="0" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.yprodan.quiz.ui.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.yprodan.quiz.ui.MainFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_main_item_list">
        <action
            android:id="@+id/action_mainFragment_to_quizFragment"
            app:destination="@id/quizFragment">
            <argument
                android:name="fname"
                app:argType="string" />
        </action>
    </fragment>
</navigation>